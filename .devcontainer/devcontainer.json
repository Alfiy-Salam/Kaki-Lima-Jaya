{
  "name": "Kaki Lima Jaya (Java + MySQL)",
  // Kita gunakan image Java yang sama seperti yang sedang dipakai sekarang
  "image": "mcr.microsoft.com/devcontainers/java:0-17-bullseye",
  
  // Port yang ingin kita akses
  "forwardPorts": [8080, 3306],
  
  // Ekstensi VS Code yang kita butuhkan
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot"
      ]
    }
  }
}